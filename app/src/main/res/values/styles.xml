<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="Home.Light" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:navigationBarColor" tools:targetApi="21">@android:color/transparent</item>
    <item name="android:colorPrimaryDark" tools:targetApi="21">@android:color/transparent</item>
    <item name="android:windowShowWallpaper">true</item>

    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:textColorPrimary">@color/LightTextColor</item>
    <item name="android:textColor">@color/LightTextColor</item>
    <item name="android:textColorSecondary">@color/LightTextColorSecondary</item>
  </style>

  <style name="Home.Dark" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:navigationBarColor" tools:targetApi="21">@android:color/transparent</item>
    <item name="android:colorPrimaryDark" tools:targetApi="21">@android:color/transparent</item>
    <item name="android:windowShowWallpaper">true</item>

    <item name="colorPrimary">@color/darkColorPrimary</item>
    <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
    <item name="colorAccent">@color/LightTextColor</item>

    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:textColorPrimary">@color/white</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textColorSecondary">@color/LightTextColorSecondary</item>
    <item name="cardBackgroundColor">@color/DarkBackground</item>
    <item name="sliceItemBackground">@color/DarkBackground</item>
    <item name="popupItemBackground">@color/DarkBackground</item>
    <item name="iconColor">@color/shortcut_icon_color</item>
    <item name="activeIconColor">@color/shortcut_active_icon_color</item>
  </style>

  <style name="NormalActivity.Light" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="iconColor">#FF515151</item>

    <item name="android:windowBackground">@color/LightBackground</item>
    <item name="android:textColorPrimary">@color/LightTextColor</item>
    <item name="android:textColor">@color/LightTextColor</item>
    <item name="android:textColorSecondary">@color/LightTextColorSecondary</item>
  </style>

  <style name="NormalActivity.Dark" parent="Theme.AppCompat.NoActionBar">
    <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    <item name="colorPrimary">@color/darkColorPrimary</item>
    <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
    <item name="colorAccent">@color/darkColorAccent</item>
    <item name="iconColor">@color/white</item>
    <item name="grid_background">@color/darkColorPrimary</item>

    <item name="android:windowBackground">@color/DarkBackground</item>
    <item name="android:textColorPrimary">@color/DarkTextColor</item>
    <item name="android:textColor">@color/DarkTextColor</item>
    <item name="android:textColorSecondary">@color/DarkTextColorSecondary</item>
    <item name="cardBackgroundColor">@color/DarkBackground</item>
  </style>

  <style name="NormalActivity.Black" parent="Theme.AppCompat.NoActionBar">
    <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="iconColor">#FFFFFFFF</item>

    <item name="android:windowBackground">@color/BlackBackground</item>
    <item name="android:textColorPrimary">@color/DarkTextColor</item>
    <item name="android:textColor">@color/DarkTextColor</item>
    <item name="android:textColorSecondary">@color/DarkTextColorSecondary</item>
  </style>

  <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="colorControlNormal">@color/white</item>
    <item name="titleTextColor">@color/white</item>
    <item name="background">@color/colorPrimary</item>
  </style>

  <style name="IntroTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
    <item name="android:windowBackground">@null</item>
    <item name="android:windowShowWallpaper">true</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="FilePickerTheme" parent="NNF_BaseTheme">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <!-- Overridden in device overlays -->
  <style name="PagedViewWidgetImageView">
    <item name="android:paddingLeft">@dimen/app_widget_preview_padding_left</item>
  </style>

</resources>